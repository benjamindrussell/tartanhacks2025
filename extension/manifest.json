{
  "manifest_version": 3,
  "name": "My Chrome Extension",
  "version": "1.0",
  "description": "A basic Chrome extension",
  "permissions": [
    "activeTab",
    "scripting",
    "tabs",
    "background",
    "desktopCapture"
  ],
  "host_permissions": [
    "*://*.google.com/*",
    "*://*.github.com/*",
    "*://*.replit.com/*",
    "*://*.overleaf.com/*",
    "*://*.instructure.com/*",
    "*://docs.google.com/*",
    "http://localhost:3000/*",
    "ws://localhost:8080/*"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "action": {
    "default_popup": "popup.html"
  }
}
