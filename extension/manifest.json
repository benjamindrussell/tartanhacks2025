{
  "manifest_version": 3,
  "name": "My Chrome Extension",
  "version": "1.0",
  "description": "A basic Chrome extension",
  "permissions": [
    "activeTab",
    "scripting",
    "tabs"
  ],
  "host_permissions": [
    "*://*.google.com/*",
    "*://*.github.com/*",
    "*://*.replit.com/*",
    "*://*.overleaf.com/*",
    "*://*.instructure.com/*"
  ],
  "action": {
    "default_popup": "popup.html"
  }
}
